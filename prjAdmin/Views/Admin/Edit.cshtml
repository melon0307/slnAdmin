@model prjAdmin.Models.Admin

@{
    ViewData["Title"] = "Edit";
}

<h1>修改</h1>

<h4>管理員資料</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="AdminId" class="form-control"  type="hidden"/>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group form-check form-switch">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="ProductOk" /> @Html.DisplayNameFor(model => model.ProductOk)
                </label>
            </div>
            <div class="form-group form-check form-switch">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="OrderOk" /> @Html.DisplayNameFor(model => model.OrderOk)
                </label>
            </div>
            <div class="form-group form-check form-switch">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="MemberOk" /> @Html.DisplayNameFor(model => model.MemberOk)
                </label>
            </div>
            <div class="form-group form-check form-switch">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="ArticleOk" /> @Html.DisplayNameFor(model => model.ArticleOk)
                </label>
            </div>
            <div class="form-group form-check form-switch">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="AdminOk" /> @Html.DisplayNameFor(model => model.AdminOk)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="List">回選單</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
<script>
    let article = document.querySelector("#article")

    article.classList.add("active")
</script>

}
