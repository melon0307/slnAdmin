@model prjAdmin.Models.Constellation

@{
    ViewData["Title"] = "EditConstellation";
}

<h1 class="h1" style="margin-top:0.5em">設定星座推廣商品</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditConstellation">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" value="@Model.ConstellationId" name="ConstellationId" />
            </div>
            <div class="form-group">
                <h3>星座：@Model.ConstellationName</h3>
            </div>
            <div class="form-group">
                <h4>推廣產品：</h4>
                <input asp-for="ConstellationProductId" class="form-control" />
                <span asp-validation-for="ConstellationProductId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <br />
                <input type="submit" value="儲存設定" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

<script>
    let constellation = document.querySelector("#constellation");
    constellation.classList.add("active")
</script>

}
